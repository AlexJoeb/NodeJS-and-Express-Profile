extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 What can I conjure for you?
      p.lead.text-light
        | Let me take you on a journey of the works of art that I have created with beautiful code.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/project/${project.id}`, target='_blank')
            img.thumbnail(src=`${project.images.thumbnail}`)
            h5=project.project_name
      
